<h1>Labs</h1>

<div class="row mb-2">
  <div class="col-lg-6 col-md-7">
    <%= search_form_for @q do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, placeholder: 'Search for lab name', class: 'form-control' %>

        <div class="input-group-append">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<table class="table table-sm bg-white table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :name) %></th>
      <th><%= sort_link(@q, :slug) %></th>
      <th>Course</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labs.each do |lab| %>
      <tr>
        <td><%= link_to lab.name, lab %></td>
        <td><%= lab.slug %></td>
        <td><%= lab.course %></td>
        <td><%= ISO3166::Country[lab.country]&.name || nil %></td>
        <td><%= link_to 'Show', lab %></td>
        <td><%= link_to 'Edit', edit_lab_path(lab) %></td>
        <td><%= link_to 'Destroy', lab, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lab', new_lab_path, class: 'btn btn-outline-primary' %>
