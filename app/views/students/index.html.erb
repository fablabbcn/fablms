<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Continuing</th>
      <th>Is instructor</th>
      <th>Lab name</th>
      <th>Lab handle</th>
      <th>Country</th>
      <th>Continent</th>
      <th>Website path</th>
      <th>Organization</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.code %></td>
        <td><%= student.name %></td>
        <td><%= student.username %></td>
        <td><%= student.email %></td>
        <td><%= student.continuing %></td>
        <td><%= student.is_instructor %></td>
        <td><%= student.lab_name %></td>
        <td><%= student.lab_handle %></td>
        <td><%= student.country %></td>
        <td><%= student.continent %></td>
        <td><%= student.website_path %></td>
        <td><%= student.organization_id %></td>
        <td><%= student.course_id %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag import_students_url, multipart: true do %>
  <%= file_field_tag :file %>
  <p> Supported fields: <b> code;name;email;continuing;lab_name;lab_handle;country;continent;username;website_path </b> </p>
  <%= submit_tag "Import students" %>
<% end %>

<br></br>

<%= link_to 'New Student', new_student_path %>
