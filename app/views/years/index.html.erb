<h1>Years</h1>

<table class="table table-sm bg-white table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Courses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @years.each do |year| %>
      <tr>
        <td><%= link_to year.name, year %></td>
        <td><%= year.courses.count %></td>
        <td><%= link_to 'Show', year %></td>
        <td><%= link_to 'Edit', edit_year_path(year) %></td>
        <td><%= link_to 'Destroy', year, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Year', new_year_path, class: 'btn btn-outline-primary my-3'  %>
